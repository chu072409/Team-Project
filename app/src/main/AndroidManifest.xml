<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.closetfeaturetest">


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClosetFeatureTest"
        tools:targetApi="31">

        <!-- MainActivity: 앱 진입점 아님 -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ClosetActivity: 앱 시작화면으로 설정 -->
        <activity
            android:name=".ClosetActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AddClothesActivity: 이미지 추가 화면 -->
        <activity
            android:name=".AddClothesActivity"
            android:exported="false" />
    </application>

</manifest>
