<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"> <!-- 배경: 흰색 -->

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 뒤로 가기 버튼 -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="뒤로 가기"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp"
            app:tint="#666666" /> <!-- 아이콘: 진한 회색 -->

        <!-- 체형 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#F5F5F5"> <!-- 카드 배경: 연한 회색 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 체형 선택 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="체형 선택"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#444444"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_body_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#CCCCCC" /> <!-- 중간 회색 -->

                <!-- 키/몸무게 입력 라벨 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키와 몸무게 입력"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp" />

                <!-- 키 입력 -->
                <EditText
                    android:id="@+id/edit_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="키 (cm)"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:textColorHint="#AAAAAA"
                    android:layout_marginBottom="12dp" />

                <!-- 몸무게 입력 -->
                <EditText
                    android:id="@+id/edit_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="몸무게 (kg)"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- BMI 계산 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_calculate_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI 계산"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- 결과 표시 -->
        <TextView
            android:id="@+id/text_bmi_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- 저장 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
