<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.OutfitFragment">

    <!-- 왼쪽 상단: 옷장 버튼 -->
    <ImageButton
        android:id="@+id/btnCloset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button_bg"
        android:src="@drawable/ic_home"
        android:contentDescription="옷장"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- 오른쪽 상단: 오늘의 날씨 팁 -->
    <TextView
        android:id="@+id/todayTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 팁"
        android:textSize="14sp"
        android:textColor="#555555"
        android:background="@drawable/rounded_tip_bg"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp" />

    <!-- 상의 셀 -->
    <LinearLayout
        android:id="@+id/topCell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card_bg"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCloset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/topIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/topDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상의 추천"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- 하의 셀 -->
    <LinearLayout
        android:id="@+id/bottomCell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card_bg"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/topCell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/bottomIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/bottomDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하의 추천"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- 신발 셀 -->
    <LinearLayout
        android:id="@+id/shoesCell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card_bg"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bottomCell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/shoesIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/shoesDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신발 추천"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
