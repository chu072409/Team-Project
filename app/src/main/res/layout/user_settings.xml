<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 내용 스크롤 영역 -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- 제목 -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:maxWidth="320dp"
                android:text="@string/title_settings"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#ECE7DA"
                android:textColor="#000000"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />

            <!-- 버튼들 (모서리 둥글게) -->
            <android.widget.Button
                android:id="@+id/btn_basic_info"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="@string/btn_basic_info"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#000000"
                android:stateListAnimator="@null"
                android:layout_marginBottom="16dp" />

            <android.widget.Button
                android:id="@+id/btn_notification"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="@string/btn_notification"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#000000"
                android:stateListAnimator="@null"
                android:layout_marginBottom="16dp" />

            <android.widget.Button
                android:id="@+id/btn_body_type"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="@string/btn_body_type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#000000"
                android:stateListAnimator="@null"
                android:layout_marginBottom="16dp" />

            <android.widget.Button
                android:id="@+id/btn_style_pref"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="@string/btn_style_pref"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#000000"
                android:stateListAnimator="@null"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 하단 네비게이션 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
